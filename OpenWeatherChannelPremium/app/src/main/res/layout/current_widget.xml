<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/forPendingIntent"
    android:background="@drawable/rounded_background_for_widget">

    <RelativeLayout
        android:id="@+id/rellayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_gps"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_gps" />


        <TextView
            android:id="@+id/txtLocalPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ic_gps"
            android:text="Baku"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_weather_stiuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="Scattered cloud"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>


    <TextClock
        android:id="@+id/textClock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rellayout1"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/shadow"
        android:format12Hour="null"
        android:format24Hour="hh:mm"
        android:textColor="#fff"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/weather_situationForCurrentWidget"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_01d" />

    <TextView
        android:id="@+id/weather_valueForCurrentWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/shadow"
        android:layout_toLeftOf="@+id/weather_situationForCurrentWidget"
        android:text="20Â°C"
        android:textColor="#fff"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/rellayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textClock"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txt_calendar_forWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Thursday, October 25"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Wind speed: 10m/sec"
            android:textColor="#fff"
            android:textSize="12sp" />


    </RelativeLayout>


</RelativeLayout>