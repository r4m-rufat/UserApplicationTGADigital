<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginRight="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_week_name_forDailyWidget"
        android:text="THU"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/stiuation_image_for_dailyWidget"
        android:layout_below="@+id/txt_week_name_forDailyWidget"
        android:src="@drawable/sun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/txt_weather_value_DetailDailyWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stiuation_image_for_dailyWidget"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="12/9"/>


</RelativeLayout>